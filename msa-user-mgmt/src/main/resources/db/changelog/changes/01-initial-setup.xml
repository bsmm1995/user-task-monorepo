<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="00-initial-setup-schema" author="system">
        <sql>
            CREATE SCHEMA IF NOT EXISTS ${schema};
        </sql>
    </changeSet>

    <changeSet id="00-initial-setup-extension" author="system">
        <sql>
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
        </sql>
    </changeSet>

    <changeSet id="01-create-users-table" author="system">
        <createTable tableName="users" schemaName="${schema}">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(36)"/>
            <column name="deleted_by" type="VARCHAR(36)"/>
        </createTable>

        <addUniqueConstraint columnNames="email" tableName="users" schemaName="${schema}"
                             constraintName="uk_users_email"/>
    </changeSet>

    <changeSet id="02-create-users-indexes" author="system">
        <createIndex indexName="idx_users_email" tableName="users" schemaName="${schema}">
            <column name="email"/>
        </createIndex>

        <createIndex indexName="idx_users_created_at" tableName="users" schemaName="${schema}">
            <column name="created_at" descending="true"/>
        </createIndex>

        <createIndex indexName="idx_users_deleted_at" tableName="users" schemaName="${schema}">
            <column name="deleted_at"/>
        </createIndex>

        <createIndex indexName="idx_users_names" tableName="users" schemaName="${schema}">
            <column name="first_name"/>
            <column name="last_name"/>
        </createIndex>

        <createIndex indexName="idx_users_created_by" tableName="users" schemaName="${schema}">
            <column name="created_by"/>
        </createIndex>

        <createIndex indexName="idx_users_updated_by" tableName="users" schemaName="${schema}">
            <column name="updated_by"/>
        </createIndex>
    </changeSet>

    <changeSet id="03-add-users-comments" author="system">
        <sql>
            COMMENT ON SCHEMA ${schema} IS 'Schema for user management data';
            COMMENT ON TABLE ${schema}.users IS 'User entities with soft delete support and audit trail';
            COMMENT ON COLUMN ${schema}.users.created_at IS 'Timestamp when the user was created';
            COMMENT ON COLUMN ${schema}.users.updated_at IS 'Timestamp when the user was last updated';
            COMMENT ON COLUMN ${schema}.users.deleted_at IS 'Soft delete timestamp, NULL means active record';
            COMMENT ON COLUMN ${schema}.users.created_by IS 'Username of the user who created this record';
            COMMENT ON COLUMN ${schema}.users.updated_by IS 'Username of the user who last updated this record';
            COMMENT ON COLUMN ${schema}.users.deleted_by IS 'Username of the user who deleted this record';
        </sql>
    </changeSet>

</databaseChangeLog>
