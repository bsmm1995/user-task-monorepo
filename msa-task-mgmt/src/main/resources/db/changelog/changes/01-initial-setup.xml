<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="00-initial-setup-schema" author="system">
        <sql>
            CREATE SCHEMA IF NOT EXISTS ${schema};
        </sql>
    </changeSet>

    <changeSet id="00-initial-setup-extension" author="system">
        <sql>
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
        </sql>
    </changeSet>

    <changeSet id="01-create-tasks-table" author="system">
        <createTable tableName="tasks" schemaName="${schema}">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="status" type="VARCHAR(50)" defaultValue="TODO">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(36)"/>
            <column name="deleted_by" type="VARCHAR(36)"/>
        </createTable>

        <sql>
            ALTER TABLE ${schema}.tasks
                ADD CONSTRAINT ck_tasks_status
                    CHECK (status IN ('TODO', 'IN_PROGRESS', 'DONE', 'CANCELLED'));
        </sql>
    </changeSet>

    <changeSet id="02-create-tasks-indexes" author="system">
        <createIndex indexName="idx_tasks_user_id" tableName="tasks" schemaName="${schema}">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_tasks_status" tableName="tasks" schemaName="${schema}">
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_tasks_created_at" tableName="tasks" schemaName="${schema}">
            <column name="created_at" descending="true"/>
        </createIndex>

        <createIndex indexName="idx_tasks_deleted_at" tableName="tasks" schemaName="${schema}">
            <column name="deleted_at"/>
        </createIndex>

        <createIndex indexName="idx_tasks_title" tableName="tasks" schemaName="${schema}">
            <column name="title"/>
        </createIndex>

        <createIndex indexName="idx_tasks_user_status" tableName="tasks" schemaName="${schema}">
            <column name="user_id"/>
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_tasks_created_by" tableName="tasks" schemaName="${schema}">
            <column name="created_by"/>
        </createIndex>

        <createIndex indexName="idx_tasks_updated_by" tableName="tasks" schemaName="${schema}">
            <column name="updated_by"/>
        </createIndex>
    </changeSet>

    <changeSet id="03-add-tasks-comments" author="system">
        <sql>
            COMMENT ON SCHEMA ${schema} IS 'Schema for task management data';
            COMMENT ON TABLE ${schema}.tasks IS 'Task entities with soft delete support, user relationship and audit trail';
            COMMENT ON COLUMN ${schema}.tasks.status IS 'Task status: TODO, IN_PROGRESS, DONE, CANCELLED';
            COMMENT ON COLUMN ${schema}.tasks.user_id IS 'Reference to the user who owns this task';
            COMMENT ON COLUMN ${schema}.tasks.created_at IS 'Timestamp when the task was created';
            COMMENT ON COLUMN ${schema}.tasks.updated_at IS 'Timestamp when the task was last updated';
            COMMENT ON COLUMN ${schema}.tasks.deleted_at IS 'Soft delete timestamp, NULL means active record';
            COMMENT ON COLUMN ${schema}.tasks.created_by IS 'Username of the user who created this record';
            COMMENT ON COLUMN ${schema}.tasks.updated_by IS 'Username of the user who last updated this record';
            COMMENT ON COLUMN ${schema}.tasks.deleted_by IS 'Username of the user who deleted this record';
        </sql>
    </changeSet>

</databaseChangeLog>
